rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Items images - stored in items/ folder
    match /items/{allPaths=**} {
      // Anyone can view images
      allow read: if true;
      
      // Anyone can upload images (for now - change to request.auth != null for production)
      allow write: if true;
    }
    
    // User avatars - stored in avatars/ folder
    match /avatars/{userId}/{allPaths=**} {
      // Anyone can view avatars
      allow read: if true;
      
      // Users can only upload their own avatar
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

